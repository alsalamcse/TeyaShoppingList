<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/itmTvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/itmTvamount"
            android:layout_below="@+id/itmTvamount"
            android:layout_marginTop="25dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/itmTvprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/itmTvname"
            android:layout_below="@+id/itmTvname"
            android:layout_marginTop="21dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/itmTvamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/itmChblsCompleted"
            android:layout_alignBottom="@+id/itmChblsCompleted"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="TextView" />

        <CheckBox
            android:id="@+id/itmCblsCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/itmTvname"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp"
            android:text="@string/isCompleted" />

    </RelativeLayout>
</LinearLayout>